{
  "name": "friendsofhyperf/compoships",
  "description": "Hyperf relationships with support for composite/multiple keys",
  "license": "MIT",
  "keywords": [
    "Hyperf",
    "Hyperf composite keys",
    "Hyperf relationships"
  ],
  "authors": [
    {
      "name": "Claudin J. Daniel",
      "email": "cdaniel@awobaz.com"
    },
    {
      "name": "huangdijia",
      "email": "huangdijia@gmail.com"
    }
  ],
  "require": {
    "hyperf/database": "~2.2.0"
  },
  "require-dev": {
    "ext-sqlite3": "*",
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpstan/phpstan": "^1.0",
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "FriendsOfHyperf\\Compoships\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FriendsOfHyperf\\Compoships\\Tests\\": "tests"
    }
  },
  "extra": {
      "branch-alias": {
          "0.x-dev": "0.1-dev"
      },
      "hyperf": {
          "config": "FriendsOfHyperf\\Compoships\\ConfigProvider"
      }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "suggest": {
    "awobaz/eloquent-mutators": "Reusable mutators (getters/setters) for Laravel 5's Eloquent",
    "awobaz/eloquent-auto-append": "Automatically append accessors to model serialization",
    "awobaz/blade-active": "Blade directives for the Laravel 'Active' package",
    "awobaz/syntactic": "Syntactic sugar for named and indexed parameters call."
  },
  "scripts": {
      "analyse": "phpstan analyse --memory-limit 4096M -l 0 -c phpstan.neon ./src",
      "cs-fix": "php-cs-fixer fix $1"
  }
}
